---
interface Props {
	title: string;
	num: number;
}

const { title, num } = Astro.props;
---
<div class="w-full p-5 text-center">
	<h3 class="text-5xl font-bold">
		<span class="animate-[counter_3s_ease-out_forwards] tabular-nums [counter-set:_num_var(--num-internal)] before:content-[counter(num)] before:left-[calc(0.4em * var(--n, 1))]">
		<span class="sr-only">{num}</span>
		</span>
	</h3>
	<h4 class="text-xl font-semibold">{title}</h4>
</div>
	
<style define:vars={{ num }}>

@property --num-internal {
  syntax: "<integer>";
  initial-value: 0;
  inherits: false;
}

@keyframes counter {
  from {
    --num-internal: 0;
  }
  to {
    --num-internal: var(--num);
  }
}
</style>
